//Q2=> Reverse an array in place

#include<stdio.h>
int main(){
    int n;
    printf("Enter size of array: ");
    scanf("%d",&n);
    int arr[n];
    printf("Enter elements in array:\n");
    for(int i=0; i<n; i++){
        scanf("%d",&arr[i]);
    }
    //for revresing of array

    int temp;
    for(int i=0; i<n/2; i++){
        temp = arr[i];
        arr[i] = arr[n-i-1];
        arr[n-i-1] = temp;
        
    }
    //Printing of array 
    for(int i=0; i<n; i++){
        printf("%d ",arr[i]);
    }
}
