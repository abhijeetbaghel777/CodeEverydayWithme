//Q7 => Cyclically rotate an array by one
#include<stdio.h>
int main(){
    int arr [111];
    int n;
    printf("Enter no. of elements:");
    scanf("%d",&n);
    printf("Enter %d elements\n",n);
    for(int i=0; i<n; i++){
        scanf("%d",&arr[i]);
    }
    int temp = arr[n-1];      // storing last element in an variable to prevent this arr[0]=arr[-1]
    for(int i=n-1; i>0; i--){
        arr[i]=arr[i-1];
    }
    arr[0]=temp;
    for(int i=0; i<n; i++){
        printf("%d ",arr[i]);
    }
}
